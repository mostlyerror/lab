<div class="container">
  <%= devise_error_messages! %>
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="light-well">
	<h2 class="page-header text-center">Register</h2>
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

	  <div class="form-group">
	    <%= f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control" %>
	  </div>

	  <div class="form-group">
	    <% if @minimum_password_length %>
	      <em>(<%= @minimum_password_length %> characters minimum)</em>
	    <% end %><br />
	    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
	  </div>

	  <div class="form-group">
	    <%= f.button "Register", class: "btn btn-success btn-lg btn-block", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Submitting registration..."} %>
	  </div>
	<% end %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
